const solutionTitle = 'SAAS'

---
<Layout title="Our solutions">
    <HeroBento
        title={`It's not about what ${solutionTitle} can do.`} 
        subtitle={`It's about what <b>${config.brand.text}</b> can do <i>for you!</i>`} 
        images={solutionImages.slice(0, 3)}
        gridStyle="bottom"
        theme="light"
        primaryBtn="See pricing"
        primaryLink="#"
        secondaryBtn="Contact sales"
        secondaryLink="#"
    />
    <TrustedBy images={brandImages} />
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <Badge style="dark" size="lg">{solutionTitle}</Badge>
                    <h2 class="h1">
                        Improve customer grow recurring experience revenue, and reduce costs with a single buzzword 
                        unified platform for payments, subscriptions, money, invoicing, billing, receiving accounting, tax, and more.
                    </h2>
                </div>
            </div>
        </div>
    </section>
    <BentoImage image={solutionImages[3].src}>
        <h2 class="display-3 m-0 text-center text-md-end me-5">Be the hero your customers desire!</h2>
        <div class="hstack pt-5 pe-5 justify-content-md-end justify-content-center">
            <a href="#" class="btn btn-warning btn-lg">Sign up now</a>
        </div>
    </BentoImage>
</Layout>