    src: '/images' + src,
    width: i === 0 ? 450 : 321,
    height: i === 0 ? 221 : 321
}));
const brandImages = ['/placeholders/placeholder_brand-1.svg',
'/placeholders/placeholder_brand-2.svg',
'/placeholders/placeholder_brand-3.png',
'/placeholders/placeholder_brand-4.svg',].map(src => ({ 
