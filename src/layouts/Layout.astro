---
// @unocss-include
import Footer from '../components/Footer.astro';
import {AstroFont} from 'astro-font'
import Navigation from '../components/Navigation.astro';
import * as config from '../../public/config.json';
import Badge from '../components/Badge.astro';
import SiteBanner from '../components/SiteBanner.astro';

const base = config?.base ?? '';

interface Props {
	title: string;
}

const { title } = Astro.props;
const globalNav = [
	{
		href: '/',
		text: 'Home'
	},
	{
		href: '/solutions',
		text: 'Solutions'
	},
	{
		href: '/components',
		text: 'Components'
	}
].map((navItem) => {
	// navItem.href = (import.meta.env.DEV ? '' : base) + navItem.href;
	return navItem;
});

const createSrc = (name:string, weights: string[], includeItalic?: boolean) => {
	return weights.map(weight => {
		const numberWeight:Record<string, number> = {
			Bold: 800,
			Extrabold: 900,
			Regular: 600
		};

		const src = [
			{
				style: 'normal',
				weight: numberWeight[weight],
				path: `/fonts/${name}-${weight}.woff2`
			}
		]

		if (includeItalic) {
			src.push({
				style: 'italic',
				weight: numberWeight[weight],
				path: `/fonts/${name}-${weight}Italic.woff2`
			})
		}

		return src;
	}).flat()
}

---

<!doctype html>
<html lang="en" class="h-[100%]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<AstroFont config={[
			{
				name: 'BespokeSerif',
				src: createSrc('BespokeSerif', ['Bold','ExtraBold','Regular']),
				preload: false,
				display: 'swap',
				selector: 'h',
				fallback: 'serif'
			}
		]} />
		<script is:inline>
			const theme = localStorage.getItem('is-dark') ?? (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
			document.documentElement.classList.toggle('dark', theme === 'true');
			localStorage.setItem('is-dark', theme);
		</script>
	</head>
	<body class="flex flex-col h-[100%] dark:bg-sky-950 dark:c-coolgray-1">
		<SiteBanner style="sky" level="4">
			<Badge style="sky" size='sm'>Ready</Badge> for Astro 4.5
		</SiteBanner>
		<Navigation navItems={globalNav} />
		<main class="flex-[1]">
			<slot />
		</main>
		<Footer />
	</body>
</html>