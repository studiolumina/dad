---
import DynamicHeading from './DynamicHeading.astro';

interface Props {
	title: string;
	body: string;
	href?: string;
	level?: 2|3|4|5|`${2|3|4|5}`;
	border?: boolean;
	useSubtitle?: boolean;
}

const { href, title, body, level = 3 } = Astro.props;

const classNames = [];

if (!Astro.props.border) {
	classNames.push('border', 'border-0');
}
---
<div class="border-coolgray-300 border-2 border-rd-2 p-5">
	<DynamicHeading level={level} useParagraph class='h lh-[1] text-6 md:text-8 mb-3'>{title} {href && <span class="pl-3">&rarr;</span>}</DynamicHeading>
	<p class={Astro.props.useSubtitle ? 'card-subtitle' : ''}>
		{body}
	</p>
	{href && <a href={href} class="stretched-link">
		<span class="visually-hidden">Go to page at {href}</span>
	</a>}
</div>