---
import { Image } from 'astro:assets';
import { config } from '../../astro.config.mjs';
const { brand } = config;
---
<footer>
    <div class="navbar">
        <div class="container text-bg-dark footer-container section-psm">
            <div class="navbar-brand ms-3">
                {brand.logo ? <Image src={brand.logo} alt={brand.text} width="200" height="200" /> : brand.text}
            </div>
        </div>
    </div>
</footer>
<style>
    @media (min-width: 576px) {
        .footer-container {
            border-top-left-radius: 1.25rem;
            border-top-right-radius: 1.25rem;
        }
    }
</style>