---
interface Props {
    theme?: string;
}

const { theme = 'dark' } = Astro.props;
---
<section class="container py-5" data-theme={theme}>
    <div class="row">
        <div class="hstack rounded-4 p-5 justify-content-between column-gap-5 align-content-center">
            <div class="col vstack row-gap-3 justify-content-center">
                <slot name="leftSide">
                    <h2 class="display-4 fw-semibold">Features made for <i>you!</i></h2>
                    <ul role="list">
                        <li class="h2 fw-light">For people with a dream</li>
                        <li class="h2 fw-light">For people who can smell colors</li>
                        <li class="h2 fw-light">For people that are tone deaf</li>
                    </ul>
                </slot>
            </div>
            <div class="col-lg-5">
                <div class="image-grid">
                    <div><img src="https://placehold.co/200?text=1" alt=""></div>
                    <div><img src="https://placehold.co/200?text=2" alt=""></div>
                    <div><img src="https://placehold.co/200?text=3" alt=""></div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>

[data-theme="dark"] {
    .hstack {
        background-color: var(--bs-gray-900);
        color: var(--bs-gray-000);
    }
}
[data-theme="light"] {
    .hstack {
        background-color: var(--bs-gray-000);
        color: var(--bs-gray-900);
    }
}

.image-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    aspect-ratio: 1;
    width: 100%;
    height: 100%;
    grid-gap: 0.5rem;
    > * {
        grid-column: span 1;
        grid-row: span 1;
        border-radius: 0.5rem;
        > img {
            border-radius: inherit;
            height: 100%;
            object-fit: cover;
        }
    }
    > :not(:last-child) {
        grid-column: 1;
    }
    > :last-child {
        grid-row: 1 / span 2;
        grid-column: 2;
    }
}
</style>